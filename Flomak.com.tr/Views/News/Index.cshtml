@model IEnumerable<Flomak.com.tr.Models.News>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1>YENİ DUYURU EKRANI</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">YENİ DUYURU EKLE</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.History)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.History)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning">DÜZENLE</a> |
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">SİL</a>
            </td>
        </tr>
}
    </tbody>
</table>
